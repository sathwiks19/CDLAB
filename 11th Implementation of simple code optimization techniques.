//Implementation of simple code optimization techniques. 
//Write a program to perform loop unrolling.
#include <stdio.h>

int countbit1(unsigned int n);
int countbit2(unsigned int n);
int main()
{
    unsigned int n;
    int x;
    char ch;
    printf("\nEnter N\n");
    scanf("%u", &n);
    printf("\n1. Loop Roll\n2. Loop UnRoll\n");
    printf("\nEnter your choice\n");
    scanf(" %c", &ch);
    switch (ch)
    {
        case '1':
            x = countbit1(n);
            printf("\nLoop Roll: Count of 1's: %d\n", x);
            break;
        case '2':
            x = countbit2(n);
            printf("\nLoop UnRoll: Count of 1's: %d\n", x);
            break;
        default:
            printf("\nWrong Choice\n");
            return 1;
    }
    return 0;
}
int countbit1(unsigned int n)
{    int bits = 0, i = 0;
    while (n != 0)
    {        if (n & 1) bits++;
        n >>= 1;
        i++;    }
    printf("\nNumber of iterations: %d\n", i);
    return bits;
}
int countbit2(unsigned int n)
{    int bits = 0, i = 0;
    while (n != 0)
    {        bits += (n & 1) + ((n >> 1) & 1) + ((n >> 2) & 1) + ((n >> 3) & 1);
        n >>= 4;
        i++;    }
    printf("\nNumber of iterations: %d\n", i);
    return bits;}
/* OUTPUT:
Enter N
3
1. Loop Roll
2. Loop UnRoll
Enter your choice
1
Number of iterations: 2
*/
